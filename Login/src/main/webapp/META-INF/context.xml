<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource 
    name="jdbc/bookstoreDB"
    auth="Container"
    type="javax.sql.DataSource"
    username="bookstoreuser"
    password="ThePassword"
    driverClassName="com.mysql.cj.jdbc.Driver"
    url="jdbc:mysql://localhost:3306/bookstore?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=UTC"
    maxTotal="100"
    maxIdle="30"
    maxWaitMillis="10000"/>
</Context>

